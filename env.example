# ============================================
# AutoPulse Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/autopulse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=autopulse
POSTGRES_PORT=5433

# ============================================
# Backend
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Secret key for JWT tokens (generate a random string)
SECRET_KEY=your-secret-key-change-this-in-production

# ============================================
# Frontend
# ============================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# ============================================
# ML Models
# ============================================
# Path to trained eye classifier model
EYE_CLASSIFIER_MODEL=models/eye_classifier.pth

# ============================================
# Optional: External Services
# ============================================
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=
